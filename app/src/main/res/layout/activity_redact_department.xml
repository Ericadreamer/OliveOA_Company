<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com.oliveoa.view/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    tools:context=".RedactDepartmentActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //创建部门栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/null_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑部门"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>

        </LinearLayout>
        //部门编号
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="部门编号"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/department_num"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入部门编号"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //部门名称
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="部门名称"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/department_name"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入部门名称"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //部门电话
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="部门电话"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/department_tel"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入部门电话"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //部门传真
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="部门传真"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/department_fax"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入部门传真"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //上级部门
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="上级部门"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/superior_department"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入上级部门"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>

        //添加职务

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/content_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:isScrollContainer="true"
                android:orientation="vertical"
                 >
                //职务/删除
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:orientation="horizontal">

                    //职务
                    <TextView
                        android:id="@+id/add_duty"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_36"
                        android:text="职务(1)"
                        android:gravity="center"
                        android:textColor="@color/textcolor"
                        android:layout_marginLeft="@dimen/dp_16"/>
                    <Button
                        android:id="@+id/duty_delete"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="20dp"
                        android:text="删除"
                        android:singleLine="true"
                        android:textColor="@color/orange_main"
                        android:textSize="@dimen/activity_companyinfo_text" />
                </LinearLayout>


                //职务名称
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#fff">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="职务名称"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="15dp"/>

                    <EditText
                        android:id="@+id/duty_depart"
                        android:layout_width="235dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:hint="请输入职务名称"
                        android:textColor="#808080"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                //直线
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/bodyline"/>
                </LinearLayout>
                //限制人数
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="限制人数"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="15dp"/>

                    <EditText
                        android:id="@+id/staff_num"
                        android:layout_width="235dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:hint="请输入限制人数"
                        android:textColor="#808080"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                //直线
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/bodyline"/>
                </LinearLayout>
                //添加职务
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="#fff"
                    android:text="＋增加职务"
                    android:textColor="@color/orange_main"
                    android:textSize="@dimen/dp_18"/>

                </LinearLayout>

        </ScrollView>

        //提交按钮
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68"
            android:background="#fff">

            <Button
                android:id="@+id/create_depart_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bodybtn_shape"
                android:layout_gravity="center"
                android:text="提   交"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

