<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:layout_gravity="center_vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize">

        //标题栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/null_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门详情"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:background="@color/colorPrimary" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toorbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        //部门
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_depart"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_36"
                android:text="部门"
                android:gravity="center"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="@dimen/dp_16"/>
            <TextView
                android:id="@+id/depart_edit"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:layout_marginRight="20dp"
                android:text="编辑"
                android:singleLine="true"
                android:textColor="@color/orange_main"
                android:textSize="@dimen/activity_companyinfo_text" />
        </LinearLayout>
        //部门列表
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            //部门编号
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/department_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#101010"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="部门编号" />

                <TextView
                    android:id="@+id/text_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:text="0001"
                    android:textColor="@color/textcolor"
                    android:singleLine="true"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/activity_companyinfo_text"/>

            </LinearLayout>

        //部门名称
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_1">

            <TextView
                android:id="@+id/department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#101010"
                android:textSize="@dimen/activity_companyinfo_text"
                android:text="部门名称" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:layout_marginRight="20dp"
                android:text="产品部"
                android:textColor="@color/textcolor"
                android:singleLine="true"
                android:textColorHint="#898989"
                android:textSize="@dimen/activity_companyinfo_text"/>
        </LinearLayout>
        //部门电话
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/department_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#101010"
                android:textSize="@dimen/activity_companyinfo_text"
                android:text="部门电话" />

            <TextView
                android:id="@+id/text_tel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:layout_marginRight="20dp"
                android:text="0758-6666666"
                android:textColor="@color/textcolor"
                android:singleLine="true"
                android:textColorHint="#898989"
                android:textSize="@dimen/activity_companyinfo_text"/>
        </LinearLayout>
        //部门传真
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/department_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#101010"
                android:textSize="@dimen/activity_companyinfo_text"
                android:text="部门传真" />

            <TextView
                android:id="@+id/text_fax"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:layout_marginRight="20dp"
                android:text="23445642"
                android:textColor="@color/textcolor"
                android:singleLine="true"
                android:textColorHint="#898989"
                android:textSize="@dimen/activity_companyinfo_text"/>
        </LinearLayout>
        //上级部门
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/superior_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textColor="#101010"
                android:textSize="@dimen/activity_companyinfo_text"
                android:text="上级部门" />

            <TextView
                android:id="@+id/text_superior"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:layout_marginRight="20dp"
                android:text="人事部"
                android:textColor="@color/textcolor"
                android:singleLine="true"
                android:textColorHint="#898989"
                android:textSize="@dimen/activity_companyinfo_text"/>
        </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"></LinearLayout>
        //部门
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_duty"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_36"
                android:text="职务"
                android:gravity="center"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="@dimen/dp_16"/>
            <TextView
                android:id="@+id/duty_add"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:layout_marginRight="20dp"
                android:text="＋添加"
                android:singleLine="true"
                android:textColor="@color/orange_main"
                android:textSize="@dimen/activity_companyinfo_text" />
        </LinearLayout>
        //职务列表
        <LinearLayout
            android:id="@+id/duty-list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>



</LinearLayout>