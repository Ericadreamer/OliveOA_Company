<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

        //物品名称
    <LinearLayout
        android:id="@+id/goods_item"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/image_goods"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="打印机"
                android:textColor="#000"
                android:layout_marginTop="14dp"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/goods_description"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="打印公司文件"
                android:textColor="@color/LoginPrimaryDark"
                android:textSize="14dp"/>

        </LinearLayout>

    </LinearLayout>

        //竖线
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@color/bodyline"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10" />

        //借用记录、编辑
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:textColor="#101010"
                    android:textSize="16sp"
                    android:text="借用记录"/>
                <TextView
                    android:id="@+id/goods_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/LoginPrimaryDark"
                    android:text="那只喵借用未还"/>


            </LinearLayout>

            //竖线
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@color/bodyline" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:textColor="#101010"
                    android:textSize="16sp"
                    android:text="编辑"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/goods_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/ic_edit"
                        android:layout_gravity="center"
                        />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/goods_delete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_4"
                        android:src="@drawable/ic_delete"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
