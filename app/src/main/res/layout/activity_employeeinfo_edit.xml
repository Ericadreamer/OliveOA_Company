<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    >

    <LinearLayout
        android:id="@+id/toorbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/info_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="员工信息"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:id="@+id/info_save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/save"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"/>/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toorbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/content_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:hint="请输入员工姓名"
                    android:singleLine="true"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="@dimen/activity_companyinfo_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#101010"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="员工编号" />

                <EditText
                    android:id="@+id/content_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:hint="请输入员工编号"
                    android:textColor="@color/textcolor"
                    android:singleLine="true"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/activity_companyinfo_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_dcid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#101010"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="所属部门" />

                <EditText
                    android:id="@+id/content_dcid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:hint="请选择所属部门"
                    android:textColor="@color/textcolor"
                    android:singleLine="true"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/activity_companyinfo_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_pcid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#101010"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="担任职务" />

                <EditText
                    android:id="@+id/content_pcid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:hint="请选择职务"
                    android:textColor="@color/textcolor"
                    android:singleLine="true"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/activity_companyinfo_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#101010"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="性别" />

                <EditText
                    android:id="@+id/content_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:hint="请选择性别"
                    android:textColor="@color/textcolor"
                    android:singleLine="true"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/activity_companyinfo_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#101010"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="出生年月" />

                <EditText
                    android:id="@+id/content_birth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:hint="请选择出生年月"
                    android:textColor="@color/textcolor"
                    android:singleLine="true"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/activity_companyinfo_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="#101010"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="联系方式" />

                <EditText
                    android:id="@+id/content_tel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:hint="请输入员工电话"
                    android:textColor="@color/textcolor"
                    android:singleLine="true"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/activity_companyinfo_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#101010"
                    android:textSize="@dimen/activity_companyinfo_text"
                    android:text="住址" />

                <EditText
                    android:id="@+id/content_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:layout_margin = "20dp"
                    android:hint="请输入个人住址"
                    android:textColor="@color/textcolor"
                    android:inputType="textMultiLine"
                    android:textColorHint="#898989"
                    android:textSize="@dimen/activity_companyinfo_text"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>