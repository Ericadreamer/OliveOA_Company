<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:layout_gravity="center_vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //创建部门栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/null_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建部门"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>

        </LinearLayout>
        //部门编号
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="部门编号"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/department_num"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入部门编号"
                android:textColor="#808080"
                android:textSize="16dp"
                 />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //部门名称
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="部门名称"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/department_name"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入部门名称"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //部门电话
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="部门电话"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/department_tel"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入部门电话"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //部门传真
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="部门传真"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/department_fax"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入部门传真"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //上级部门
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="上级部门"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/superior_department"
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入上级部门"
                android:textColor="#808080"
                android:textSize="16dp"
                />

        </LinearLayout>
        //直线
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bodyline"/>
        </LinearLayout>
        //提交按钮
        <Button
            android:id="@+id/create_depart_btn"
            android:layout_marginTop="191dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bodybtn_shape"
            android:layout_gravity="center"
            android:text="提   交"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>
